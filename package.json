{
  "name": "hydraspecter",
  "version": "2.0.0",
  "description": "Multi-headed browser automation MCP - stealth mode, concurrent instances, ARIA snapshots, batch execution & session persistence",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "hydraspecter": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:proxy": "node test-proxy.js",
    "benchmark": "node benchmark/run-benchmark.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "browser",
    "automation",
    "playwright",
    "concurrent",
    "stealth",
    "hydra",
    "specter",
    "aria-snapshot",
    "batch-execute"
  ],
  "author": "julien",
  "license": "Apache-2.0",
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "README.md",
    "config.example.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/sqlite3": "^3.1.11",
    "better-sqlite3": "^12.6.0",
    "chalk": "^5.3.0",
    "chrome-remote-interface": "^0.33.3",
    "commander": "^12.0.0",
    "playwright": "npm:rebrowser-playwright@^1.52.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "playwright": "npm:rebrowser-playwright@^1.52.0"
  }
}
